    <select id="queryList" resultType="com.platform.entity.GbCoachEntity">
        select
          `id`,
          `province_name`,
          `city_name`,
          `county_name`,
          `mobile`,
          `name`,
          `nick_name`,
          `password`,
          `avatar`,
          `level_id`,
          `balance`,
          `weixin`,
          `alipay`,
          `bank_card`,
          `id_card`,
          `address`,
          `id_card_front`,
          `id_card_back`,
          `status`,
          `identification`,
          `pic`
        from gb_coach
        WHERE 1=1
        <if test="name != null and name.trim() != ''">
            AND name LIKE concat('%',#{name},'%')
        </if>
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
            <otherwise>
                order by id desc
            </otherwise>
        </choose>
        <if test="offset != null and limit != null">
            limit #{offset}, #{limit}
        </if>
    </select>

    <select id="queryTotal" resultType="int">
        select count(*) from gb_coach
        WHERE 1=1
        <if test="name != null and name.trim() != ''">
            AND name LIKE concat('%',#{name},'%')
        </if>
    </select>
