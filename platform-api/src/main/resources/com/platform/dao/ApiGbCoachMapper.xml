          `bank_card`,
          `id_card`,
          `address`,
          `id_card_front`,
          `id_card_back`,
          `status`,
          `identification`,
          `pic`,
          `create_time`,
           `modify_time`)
		values(
          #{userId},
          #{provinceName},
          #{cityName},
          #{countyName},
          #{mobile},
          #{name},
          #{nickName},
          #{password},
          #{avatar},
